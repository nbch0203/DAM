package vista;

import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JPasswordField;
import javax.swing.JButton;
import javax.swing.JTextPane;

public class Interfaz extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
	private JTextField nombre_usuario;
	private JTextField passwordField;
	private JButton aceptar, cancelar;
	private JTextPane textPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Interfaz frame = new Interfaz();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public Interfaz() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JPanel panel = new JPanel();
		panel.setBounds(26, 10, 400, 243);
		contentPane.add(panel);
		panel.setLayout(null);

		JLabel nombre = new JLabel("Ingrese nombre de usuario:");
		nombre.setBounds(22, 32, 140, 13);
		panel.add(nombre);

		nombre_usuario = new JTextField();
		nombre_usuario.setBounds(191, 29, 96, 18);
		panel.add(nombre_usuario);
		nombre_usuario.setColumns(10);

		JLabel clave = new JLabel("Ingrese clave");
		clave.setBounds(22, 75, 140, 12);
		panel.add(clave);

		passwordField = new JPasswordField();
		passwordField.setBounds(191, 72, 96, 18);
		panel.add(passwordField);

		aceptar = new JButton("Aceptar");
		aceptar.setBounds(152, 119, 84, 20);
		panel.add(aceptar);
		aceptar.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				String aux = passwordField.getText();
				if (aux.equalsIgnoreCase("Aloha1234")) {
					textPane.setText("CORRECTO");
					textPane.setSelectionColor(green)
					

				}

				if (nombre_usuario.getText().isEmpty()) {
					textPane.setText("ERROR");
				}
			}
		});

		cancelar = new JButton("Cancelar");
		cancelar.setBounds(241, 119, 84, 20);
		panel.add(cancelar);
		cancelar.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				nombre_usuario.setText("");
				passwordField.setText("");

			}
		});

		textPane = new JTextPane();
		textPane.setBounds(191, 177, 96, 26);
		panel.add(textPane);

	}
}
