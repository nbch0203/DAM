import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JButton;
import javax.swing.JLabel;
import java.awt.Font;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Ejercicio1 extends JFrame {
    
    // Atributos de clase para los componentes que necesitamos consultar/modificar
    private JLabel lblPisoActual;
    private JLabel lblDireccion;
    private int pisoActual = 1; // El ascensor inicia en el piso 1
    
    public Ejercicio1() {
        setTitle("Tablero de Ascensor");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 400, 350);
        
        JPanel contentPane = new JPanel();
        contentPane.setLayout(null);
        setContentPane(contentPane);
        
        // Título
        JLabel lblTitulo = new JLabel("ASCENSOR");
        lblTitulo.setFont(new Font("Tahoma", Font.BOLD, 18));
        lblTitulo.setBounds(140, 10, 120, 30);
        contentPane.add(lblTitulo);
        
        // Label estática "Piso:"
        JLabel lblTextoP = new JLabel("Piso:");
        lblTextoP.setFont(new Font("Tahoma", Font.PLAIN, 14));
        lblTextoP.setBounds(80, 60, 50, 25);
        contentPane.add(lblTextoP);
        
        // Label que muestra el piso actual (atributo de clase)
        lblPisoActual = new JLabel("1");
        lblPisoActual.setFont(new Font("Tahoma", Font.BOLD, 24));
        lblPisoActual.setBounds(140, 55, 50, 35);
        contentPane.add(lblPisoActual);
        
        // Label estática "Dirección:"
        JLabel lblTextoDireccion = new JLabel("Dirección:");
        lblTextoDireccion.setFont(new Font("Tahoma", Font.PLAIN, 14));
        lblTextoDireccion.setBounds(210, 60, 80, 25);
        contentPane.add(lblTextoDireccion);
        
        // Label que muestra la dirección (atributo de clase)
        lblDireccion = new JLabel("");
        lblDireccion.setFont(new Font("Tahoma", Font.BOLD, 14));
        lblDireccion.setBounds(290, 60, 90, 25);
        contentPane.add(lblDireccion);
        
        // Botón Piso 1
        JButton btnPiso1 = new JButton("1");
        btnPiso1.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso1.setBounds(80, 120, 70, 60);
        btnPiso1.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(1);
            }
        });
        contentPane.add(btnPiso1);
        
        // Botón Piso 2
        JButton btnPiso2 = new JButton("2");
        btnPiso2.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso2.setBounds(170, 120, 70, 60);
        btnPiso2.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(2);
            }
        });
        contentPane.add(btnPiso2);
        
        // Botón Piso 3
        JButton btnPiso3 = new JButton("3");
        btnPiso3.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso3.setBounds(260, 120, 70, 60);
        btnPiso3.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(3);
            }
        });
        contentPane.add(btnPiso3);
        
        // Botón Piso 4
        JButton btnPiso4 = new JButton("4");
        btnPiso4.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso4.setBounds(80, 200, 70, 60);
        btnPiso4.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(4);
            }
        });
        contentPane.add(btnPiso4);
        
        // Botón Piso 5
        JButton btnPiso5 = new JButton("5");
        btnPiso5.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso5.setBounds(170, 200, 70, 60);
        btnPiso5.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(5);
            }
        });
        contentPane.add(btnPiso5);
        
        // Botón Piso 6
        JButton btnPiso6 = new JButton("6");
        btnPiso6.setFont(new Font("Tahoma", Font.BOLD, 16));
        btnPiso6.setBounds(260, 200, 70, 60);
        btnPiso6.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                irAPiso(6);
            }
        });
        contentPane.add(btnPiso6);
    }
    
    // Método que maneja la lógica del ascensor
    private void irAPiso(int pisoDestino) {
        if (pisoDestino > pisoActual) {
            // El ascensor sube
            lblDireccion.setText("Sube");
        } else if (pisoDestino < pisoActual) {
            // El ascensor baja
            lblDireccion.setText("Baja");
        } else {
            // El ascensor está en el piso actual
            lblDireccion.setText("Piso actual");
        }
        
        // Actualizamos el piso actual
        pisoActual = pisoDestino;
        lblPisoActual.setText(String.valueOf(pisoActual));
    }
    
    // Método main para ejecutar el programa
    public static void main(String[] args) {
        java.awt.EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    Ejercicio1 frame = new Ejercicio1();
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }
}