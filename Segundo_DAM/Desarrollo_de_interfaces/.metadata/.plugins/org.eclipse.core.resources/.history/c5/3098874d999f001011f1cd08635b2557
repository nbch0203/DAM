		lblNewLabel.setBounds(10, 10, 77, 12);
		panel.add(lblNewLabel);
		
		profes = new JTextField();
		profes.setBounds(83, 7, 253, 18);
		panel.add(profes);
		profes.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("Nº Hermanos:");
		lblNewLabel_1.setBounds(10, 44, 77, 12);
		panel.add(lblNewLabel_1);
		
		JSpinner spinner = new JSpinner();
